# Environment Configuration
KANG_ENV=local

# PostgreSQL Container Configuration
POSTGRES_DB=kang_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432
TEST_POSTGRES_DB=test_kang_db
TEST_POSTGRES_USER=postgres
TEST_POSTGRES_PASSWORD=password
TEST_POSTGRES_PORT=5432
# Host settings for Docker Compose environment
POSTGRES_HOST=postgres
TEST_POSTGRES_HOST=localhost

# Redis Cache (Docker Composeìš©)
REDIS_URL=redis://redis:6379
# Redis use Domain
REDIS_AUTH_DB=1
REDIS_AUTH_MINSIZE=1
REDIS_AUTH_MAXSIZE=10

# JWT Configuration
JWT_SECRET_KEY=development-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback/

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080