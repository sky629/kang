# Environment Configuration
KANG_ENV=dev

# PostgreSQL Container Configuration
POSTGRES_DB=kang_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432
TEST_POSTGRES_DB=test_kang_db
TEST_POSTGRES_USER=postgres
TEST_POSTGRES_PASSWORD=password
TEST_POSTGRES_PORT=5432
# Host settings for Docker Compose environment
POSTGRES_HOST=localhost
TEST_POSTGRES_HOST=localhost

# Redis Cache (Docker Composeìš©)
REDIS_URL=redis://localhost:6379
# Redis use Domain
REDIS_AUTH_DB=1
REDIS_AUTH_MINSIZE=1
REDIS_AUTH_MAXSIZE=10

# JWT Configuration
JWT_SECRET_KEY=development-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth Configuration
GOOGLE_CLIENT_ID=1
GOOGLE_CLIENT_SECRET=1
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback/

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# AI Model Configuration (RAG System)
# GPT-OSS Configuration (Primary)
GPT_OSS_BASE_URL=http://localhost:11434
GPT_OSS_MODEL=llama3.2:1b
GPT_OSS_MAX_TOKENS=4096
GPT_OSS_TEMPERATURE=0.1
GPT_OSS_REASONING_LEVEL=medium
GPT_OSS_TIMEOUT=120

# Embedding Configuration
EMBEDDING_MODEL=jhgan/ko-sroberta-multitask
EMBEDDING_DIMENSION=768
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Vector Search Configuration  
SIMILARITY_THRESHOLD=0.7
MAX_RETRIEVED_DOCS=5

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,docx,txt
UPLOAD_DIR=uploads/documents/